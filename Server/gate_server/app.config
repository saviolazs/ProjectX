<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!--必须配置
        Game.Port:监听端口
        Product.Code:产品代码
        Product.ServerId:产品游服代码
        Redis.Host:Redis主机地址
        Redis.Port:Redis主机端口
        Redis.Password:密码
        Redis.Db:数据库位置
    -->
    <add key="Game.Port" value="9001" />
    <add key="Product.Code" value="1" />
    <add key="Product.ServerId" value="1" />
    <add key="Redis.Host" value="192.168.2.109" />
    <add key="Redis.Db" value="0" />
    <add key="Game.Action.Script.TypeName" value="HelloWorld.Script.Action.Action{0}" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <connectionStrings>
    <!--数据库连接配置 
	    name: 项目Model实体类配置的ConnectKey
	    providerName: 数据连接驱动提供类型(MYSQL: MySqlDataProvider, MSMQ: SqlDataProvider),默认是MSMQ
	    connectionString: 数据库连接字符串
	-->
    <add name="GameData" providerName="" connectionString="Data Source=.;Initial Catalog=GameData;Uid=sa;Pwd=zs198728;"/>
  </connectionStrings> 
</configuration>
